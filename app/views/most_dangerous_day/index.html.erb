<div class="range">
  <%= @presenter.start_date %> - <%= @presenter.end_date %>
</div>

<div class="most-dangerous-header">
  The most dangerous day is <%= @presenter.most_dangerous_day %>, with <%= @presenter.mdd_asteroid_count %> potentially dangerous asteroids
</div>

<% @presenter.dangerous_asteroids.each do |asteroid| %>
  <div class="asteroid">
    <p>Name: <%= asteroid.name %></p>
    <p>NEO Reference ID: <%= asteroid.neo_id %></p>
  </div>
<% end %>
